<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
</head>
<body>
	<form action='/forums' method='GET'>
		<button>home</button>
	</form>

	<h1>Welcome to the thread for <%= sub.topic %></h1>

	
	<% threads.forEach(function(thread){ %>
		<a href='/forums/<%=id%>/thread/<%=thread.threads_id%>'><p> <%=thread.title%> </p>
		</a>

		<p> 	-posted by: <%= thread.name %>  ^ <%=thread.upvotes%> || comments: <%=thread.counter%> </p>




	<%	}) %>


	<form action='/forums/<%=id%>/thread/<%=sub.subforums_id%>' method='POST'>
		<label for='thread'>Start new thread</label><br><br>
		<input type='text' name='name' placeholder='thread title' id='thread'><br><br>
		<textarea rows="4" cols="50" name="text">
		</textarea><br><br>

		<button>Start thread</button>
	</form>


		
	
</body>
</html>