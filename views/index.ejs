<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/grids-responsive-min.css">
	<link rel="stylesheet" href="http://localhost:3000/style.css">
</head>
</head>
<body>
	
	<div class="container">
		<div class="pure-g">
			
			<div class="pure-u-1-1">
				<nav class="pure-menu-horizontal">
					<ul class="pure-menu-list">
						<li class="pure-menu-item pure-menu-selected"><a href="/forums" class="pure-menu-link">Home</a></li>
						<li class="pure-menu-item pure-menu-selected"><a href="/login" class="pure-menu-link">Log out</a></li>

						<li class="pure-menu-item pure-menu-has-children pure-menu-allow-hover">
							<a href="#" id="menulink1" class="pure-menu-link">Sub Forums</a>
							<ul class="pure-menu-children">

							<% subs.forEach(function(sub){ %>
								<li class="pure-menu-item"><a href='/forums/<%=userID%>/sub/<%=sub.subforums_id%>' class="pure-menu-link"> <%= sub.topic %>
									</a>
								</li>	
								<% }) %>

							</ul>
						</li>
					</ul>
				</nav>
			</div>


			<div class="pure-u-1-1">
				<div class="pure-u-1-1 banner">
					<img src="banner.png">
				</div>
			</div>
			
			<div class="pure-u-1-1">
				<div class="pure-u-3-24">
				</div>
				
				<div class="pure-u-18-24 vid">
					<video autoplay>
						<source src="vid.mp4" type="video/mp4">
					</video>
				</div>
				
				<div class="pure-u-3-24">
				</div>

			</div>
			
			<div class="pure-u-1-1">
				<form class="pure-form" action='/forums/<%=userID%>/new' method='POST'>
					<label for='thread'>Create new subforum</label><br><br>
					<input type='text' name='name' placeholder='thread name' id='thread' class="pure-input-rounded">

					<button class="pure-button">Start subforum</button>
				</form>
			</div>	


		</div>
	</div>
	
</body>
</html>




