<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/grids-responsive-min.css">
	<link rel="stylesheet" href="/style.css">
</head>
</head>
<body>
	<div class="container">
		<div class="pure-g">
			<!-- NAVBAR -->
			<div class="pure-u-1-1">
				<nav class="pure-menu-horizontal">
					<ul class="pure-menu-list">
						<li class="pure-menu-item pure-menu-selected"><a href="/forums" class="pure-menu-link">Home</a></li>
						<li class="pure-menu-item pure-menu-selected"><a href="/login" class="pure-menu-link">Log out</a></li>

						<li class="pure-menu-item pure-menu-has-children pure-menu-allow-hover">
							<a href="#" id="menulink1" class="pure-menu-link">Sub Forums</a>
							<ul class="pure-menu-children">

							<% subs.forEach(function(sub){ %>
								<li class="pure-menu-item"><a href='/forums/<%=userID%>/sub/<%=sub.subforums_id%>' class="pure-menu-link"> <%= sub.topic %>
									</a>
								</li>	
							<% }) %>

							</ul>
						</li>
					</ul>
				</nav>
			</div>
			<!-- NAVBAR -->

			<!-- BANNER -->
			<div class="pure-u-5-24">
			</div>
			<div class="pure-u-14-24 banner">
				<img class="pure-img" src="banner.png">
			</div>
			<div class="pure-u-5-24">
			</div>
			<!-- BANNER -->
			
			<!-- BODY/PICTURES -->
			<div class="pure-u-1-24">
			</div>
			<div class="pure-u-22-24 frame">
			</div>
			<div class="pure-u-1-24">
			</div>
			<!-- BODY/PICTURES -->
			
			
			<div class="pure-u-1-1">
				<form class="pure-form subforum-form" action='/forums/<%=userID%>/new' method='POST'>
					<label for='thread' class="label">Create new subforum</label><br><br>
					<input type='text' name='name' placeholder='subforum name' id='thread' class="pure-input">
					<button class="pure-button">Start subforum</button>
				</form>
			</div>	

		</div>
	</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js"></script>	
<script src="http://localhost:3000/script.js"></script>
</body>
</html>




