<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<link rel="stylesheet" href="/style.css">
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.min.css">
	<link rel="stylesheet" href="/owl.carousel.css">
	<link rel="stylesheet" href="/owl.theme.css">
</head>
</head>
<body>
	<div class="ui small menu">
		<img src="/photos/logo.png" class="item" width="150" height="50">
			
		<div class="right menu">
			<a href="/auth/facebook">
				<button class="ui huge facebook button">
					<i class="facebook icon"></i>
					Facebook
				</button>
			</a>
		</div>
	</div>

	<div class="ui centered grid" id="topic-container">
		<div class="twelve wide column">
			<table class="ui blue table">
			  <thead>
			    <tr><th></th>
			    <th>Created By</th>
			    <th>Date Created</th>
			  </tr>
				</thead>
			  <tbody>
			  	<% subs.forEach(function(sub){ %>
			    <tr class="rows">
			      <td><i class="road icon"></i><a href='/' class="topic"><%= sub.topic %></a></td>
			      <td><img src="/photos/<%=sub.creator%>" width="70" height="50"></td>
			      <td><%= sub.time %></td>
			    </tr>
			    <% }) %>
			  </tbody>
			</table>
			<div class="ui inverted segment">
				<form class="ui inverted form" action='/forums/new' method='POST'>
					<div class="field">
    			   <label>Create New Topic</label>
    			   <input placeholder="Country" type="text" name='name'>
    			 </div>
    			<button class="ui primary button">Submit</button>
				</form>
			</div>
		</div>
	</div>
<div class="ui modal">
	<p class="login message">LOG IN THROUGH FACEBOOK TO VIEW AND POST THREADS</p>
  
	<div id="owl-demo">
          
  <div class="item"><img src="/photos/pic1.png" alt="Owl Image"></div>
  <div class="item"><img src="/photos/pic2.png" alt="Owl Image"></div>
  <div class="item"><img src="/photos/pic3.png" alt="Owl Image"></div>
  <div class="item"><img src="/photos/pic4.png" alt="Owl Image"></div>
  <div class="item"><img src="/photos/pic5.png" alt="Owl Image"></div>
  <div class="item"><img src="/photos/pic6.png" alt="Owl Image"></div>
  <div class="item"><img src="/photos/pic7.png" alt="Owl Image"></div>
  <div class="item"><img src="/photos/pic8.png" alt="Owl Image"></div>
 
	</div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js"></script>	
<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.min.js"></script>
<script src="/carousel.js"></script>
<script src="/owl.carousel.js"></script>
</body>
</html>